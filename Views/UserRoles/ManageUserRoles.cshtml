@model IEnumerable<BugTracker.Models.ViewModels.ManageUserRolesViewModel>

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-5">
            <div class=" border border-2 shadow bg-light">
                <div class="row ms-3 mt-3 mb-4">
                    <h2><b>Manage Member Roles</b></h2>
                    @foreach (var member in Model)
                    {
                        <div class="row">
                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <p><strong>@member.BTUser.FullName</strong></p>
                                        <div class="mb-2">
                                            <select asp-for="@member.SelectedRoles" class="form-control" asp-items="@member.Roles">
                                            </select>
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <input type="submit" value="Assign Role" class="btn btn-lg btn-outline-info rounded w-auto shadow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

