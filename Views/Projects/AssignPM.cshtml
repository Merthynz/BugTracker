@model BugTracker.Models.ViewModels.AssignPMViewModel

@{
    ViewData["Title"] = "Assign PM";
}

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-10">
            <div class="p-3 border border-2 shadow bg-light">

                <h1>Project: @Model.Project.Name</h1>

                <h4>Assign Project Manager</h4>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <form method="post" asp-action="AssignPM" asp-controller="Projects">
                            <input hidden asp-for="Project.Id" />

                            <h2>@Model.Project.Name</h2>

                            <p>@Model.Project.Description</p>

                            <div class="form-group">
                                <label class="control-label">Select Project Manager</label>
                                <select asp-for="PMID" class="form-control form-select" asp-items="@Model.PMList">
                                    <option></option>
                                </select>
                            </div>
                            <div class="mt-3 mb-2 d-flex justify-content-end">
                                <div class="me-3">
                                    <a asp-action="UnassignedProjects" class="btn btn-lg btn-outline-primary rounded w-7 shadow">Back to List</a>
                                </div>
                                <div>
                                    <input type="submit" value="Assign" class="btn btn-lg btn-outline-primary shadow" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

