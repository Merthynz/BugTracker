@model BugTracker.Models.ViewModels.ProjectMembersViewModel

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-6">
            <div class="p-3 border border-2 shadow bg-light">
                <div class="container">
                    <h2>Assign Members for</h2>
                    <div class="row">
                        <div class="col-12">
                            <h3>@Model.Project.Name</h3>

                            <div class="card">
                                <div class="card-header">
                                    <label asp-for="@Model.Users" class="control-label">Assign team members for Project</label>
                                </div>
                                <div class="card-body">
                                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                                        <input hidden asp-for="Project.Id" />
                                        <div class="col-12 mb-3">
                                            <div class="form-group">
                                                <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                                            </div>
                                        </div>
                                        <div class="mt-3 mb-2 d-flex justify-content-end">
                                            <div class="me-3">
                                                <a asp-action='Details' asp-controller="Projects" asp-route-id="@Model.Project.Id" class="btn btn-lg btn-outline-primary rounded w-7 shadow">Details</a>
                                            </div>
                                            <div>
                                                <input type="submit" value="Assign Users" class="btn btn-lg btn-outline-primary shadow" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
