@model IEnumerable<BugTracker.Models.Notification>
@using BugTracker.Models.Enums

@{
    ViewData["Title"] = "Index";
}
<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-10">
            <div class="text-end mb-2">
                @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                {
                    <a asp-action='Create' class="btn btn-lg btn-outline-primary rounded shadow w-auto">Create New</a>
                }
            </div>
            <div class="p-3 border border-2 shadow bg-light">
                <h1>Index</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Viewed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ticket)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recipient)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sender)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Message)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Viewed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ticket.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recipient.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sender.Id)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
