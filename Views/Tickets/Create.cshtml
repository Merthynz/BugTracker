@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-8">
            <div class="p-3 border border-2 shadow bg-light">
                <h4>Create a ticket</h4>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control mb-3" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control mb-3" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProjectId" class="control-label"></label>
                                <select asp-for="ProjectId" class="form-control form-select mb-3" asp-items="ViewBag.ProjectId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="TicketTypeId" class="control-label"></label>
                                <select asp-for="TicketTypeId" class="form-control form-select mb-3" asp-items="ViewBag.TicketTypeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="TicketPriorityId" class="control-label"></label>
                                <select asp-for="TicketPriorityId" class="form-control form-select mb-3" asp-items="ViewBag.TicketPriorityId"></select>
                            </div>
                            <div class="mt-3 mb-2 d-flex justify-content-end">
                                <div class="me-3">
                                    <a asp-action='AllTickets' class="btn btn-lg btn-outline-primary rounded w-7 shadow">Back to List</a>
                                </div>
                                <div>
                                    <input type="submit" value="Create" class="btn btn-lg btn-outline-primary shadow" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
