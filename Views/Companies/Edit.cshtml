@model BugTracker.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col-12 col-lg-6">
            <div class="p-3 border border-2 shadow bg-light">

                <h4 class="text-center">Edit Company</h4>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="CompanyName" class="control-label"></label>
                                <input asp-for="CompanyName" class="form-control mb-3" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control mb-3" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="mt-3 mb-2 d-flex justify-content-end">
                <div class="me-3">
                    <a asp-action='Index' class="btn btn-lg btn-outline-primary rounded w-7 shadow">Back to List</a>
                </div>
                <div>
                    <input type="submit" value="Save" class="btn btn-lg btn-outline-primary shadow" />
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
