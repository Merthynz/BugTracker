@model BugTracker.Models.Company

@{
    ViewData["Title"] = "Details";
}

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col 12 col-lg-10">
            <div class="p-3 border border-2 shadow bg-light">

                <div>
                    <h4 class="text-center">Company Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CompanyName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CompanyName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="mt-3 mb-2 d-flex justify-content-end">
                <div class="me-3">
                <a asp-action="Create" asp-controller="Invites" class="btn btn-lg btn-outline-primary rounded w-7 shadow">Invite New Members</a>
                </div>
                <div>
                </div>
                <a asp-action='Create' class="btn btn-lg btn-outline-primary rounded w-7 shadow">Manage Roles</a>
            </div>
        </div>

    </div>
</div>

