@model BugTracker.Models.Company

@{
    ViewData["Title"] = "Delete";
}

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="row col 12 col-lg-10">
            <div class="p-3 border border-2 shadow bg-light">
                <h3 class="text-center">Are you sure you want to delete this company?</h3>
                <div>
                    @*<h4>Company</h4>*@
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CompanyName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CompanyName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>

                </div>

            </div>
            <form asp-action="Delete">
                <div class="mt-3 mb-2 d-flex justify-content-end">
                    <div class="me-3">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action='Index' class="btn btn-lg btn-outline-primary rounded w-7 shadow">Back to List</a>
                    </div>
                    <div>
                        <input type="submit" value="Delete" class="btn btn-lg btn-outline-danger shadow" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

